@model IEnumerable<ProyectoFinal.Models.Factura>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background: cornflowerblue
    }
</style>

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Precio del Producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClienteNavigation.Nombre)
            </td>
            <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-circle-info"></i>Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<table class="table">
    <thead>
        @foreach (var item in Model) {
        <tr>


                Monto Total:
               
                @Html.DisplayFor(modelItem => item.MontoTotal)
        </tr>
        }

    </thead>
</table>
